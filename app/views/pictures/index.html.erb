<h1>一覧</h1>
<% @pictures.each do |picture| %>
<ul>
  <li><%= picture.user.name %></li>
  <li><%= image_tag picture.image.url %></li>
  <div class="content_box">
    <%= picture.content %>
  </div>
</ul>
<div class="edit_tag">
  <div class="simple_button">
    <%= link_to '詳細を確認する', picture_path(picture.id) %>
  </div>
  <div class="simple_button">
    <%= link_to "編集する", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %>
  </div>
  <div class="simple_button">
    <%= link_to "削除する", picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  </div>
</div>
<% end %>
